@model AuthenticationNAuthorization.Models.Login

@{
    ViewBag.Title = "Login";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<h2><i style="color:royalblue">Thanks For SignUp....!!!!</i></h2>

<h2 style="text-align:center">Login Portal</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @*<form class="form-horizontal">*@
    @*<div style="align-content:center">*@
    <div class="form-group">
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                @Html.LabelFor(model => model.UserName)
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                @Html.Label("Password")
                @Html.EditorFor(model => model.Pwd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pwd, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Login" style="margin-left: 396px;margin-top: 17px;" class="btn btn-primary col-md-4 col-md-offset-4">
        </div>
        <b style="margin-left: 525px;margin-top: 174px;">
            New User  ?? 

            @Html.ActionLink("SignUp Here", "Registration")
        </b>
    </div>

}

