@model IEnumerable<GridViewTask.Models.StudentForm>

@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div>
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(c => c.StudentId).Titled("StudentId");
    columns.Add(c => c.Name).Titled("Name").Filterable(true);
    columns.Add(c => c.Gender).Titled("Gender");
    columns.Add(c => c.City).Titled("City");
    columns.Add(c => c.ScholarshipApplicable).Titled("ScholarshipApplicable");
}).WithPaging(3).Sortable(true)

</div>